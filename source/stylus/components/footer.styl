.footer
  background-color: #fff

  &__container
    display: flex
    align-items: center
    flex-direction: column
    color: #000
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      align-items: flex-end
      padding 20px 0
    +above($breakpoints.md)
      padding 30px 0
    +above($breakpoints.xxl)
      padding 50px 0 56px

  &__logo
    width 90px
    height: auto
    +above($breakpoints.sm)
      width 130px
    +above($breakpoints.md)
      width 150px
    +above($breakpoints.xxl)
      width 178px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 6px
      margin-bottom 17px
    +above($breakpoints.md)
      gap: 10px
      margin-bottom 18px
    +above($breakpoints.xxl)
      margin-bottom 21px
      gap: 12px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline

  &__connection
    display: flex
    flex-direction: column
    align-items: flex-end
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: center
      justify-content flex-end
      gap: 15px;
      margin-bottom 17px
    +above($breakpoints.md)
      margin-bottom 22px
      gap: 20px;
    +above($breakpoints.xxl)
      margin-bottom 31px
      gap: 29px

  &__number-wrapper
    +above($breakpoints.xxl)
      letter-spacing: -0.5px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
