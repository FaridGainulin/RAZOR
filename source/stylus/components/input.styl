  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #F60001
  &:focus
    color: #fff
    caret-color: #F60001
    border 1px solid #F60001
    box-shadow: 3px 3px 20px 0px #F60001
    &::placeholder
      color: #fff
  &::placeholder
    color: #fff
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 16px;
    height: 50px
  +above($breakpoints.md)
    padding: 0 20px;
    font-size: 18px;
    height: 55px
  +above($breakpoints.xxl)
    padding: 0 29px;
    font-size: 20px;
    height: 60px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 10px 10px 10px 29px
    resize: none
    height: 70px
    width 280px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 15px
      width 218px
      height: 108px
    +above($breakpoints.md)
      padding: 16px 10px 10px 20px
      width 288px
      height: 119px;
    +above($breakpoints.xxl)
      padding: 17px 10px 10px 29px
      width 350px
      height: 130px

  &--black
    color: #000
    border: 1px solid #000
    &:focus
      color: #000
      &::placeholder
        color: #000
    &::placeholder
      color: #000
