.btn
  height: 50px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #fff
  border-radius: 5px
  background: #F60001
  text-transform: uppercase
  text-align: center
  font-family: 'Roboto-ExtraBold'
  font-weight: 800
  font-size: 14px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 16px;
    height: 60px;
  +above($breakpoints.md)
    font-size: 22px;
    height: 75px;
  +above($breakpoints.xxl)
    font-size: 24px;
    height: 90px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

  &--call-me
    cursor pointer
    font-size: 10px
    height: 20px
    width 150px
    line-height: 100%
    +above($breakpoints.sm)
      letter-spacing: 1px
      font-size: 10px;
      height: 34px;
      width 175px
    +above($breakpoints.md)
      font-size: 13px;
      height: 38px;
      width 225px
    +above($breakpoints.xxl)
      font-size: 14px;
      height: 42px
      width 240px
