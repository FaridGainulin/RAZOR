.invest-section
  background-image: url('../images/invest-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #010102

  &__container
    position relative
    z-index 1
    padding 20px 0 5px
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 105px 0 115px

  &__title
    text-align: center
    padding 0 0 15px
    +above($breakpoints.sm)
      padding 0 0 30px
    +above($breakpoints.md)
      padding 0 0 50px
    +above($breakpoints.xxl)
      padding 0 0 61px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position relative
    width 280px !important
    border-radius: 5px
    background-color #fff
    color: #000
    padding 15px 20px
    +above($breakpoints.sm)
      width 235px !important
      padding 15px 15px 20px
    +above($breakpoints.md)
      width 308px !important
      padding 20px 25px 25px
    +above($breakpoints.xxl)
      width 380px !important
      height: 664px
      padding 26px 32px 34px

  &__icon
    position: absolute
    width 30px
    height: 30px
    top: 20px
    right: 20px
    +above($breakpoints.sm)
      width 30px
      height: 30px
      top: 16px
      right: 16px
    +above($breakpoints.md)
      width: 40px;
      height: 40px;
      top: 23px;
      right: 23px;
    +above($breakpoints.xxl)
      width 47px
      height: 47px
      top: 28px
      right: 30px

  &__card-block
    display: flex
    align-items: center
    gap: 10px
    padding 10px 0 15px
    +above($breakpoints.sm)
      align-items: flex-end
      padding 10px 0 15px
      gap: 10px
    +above($breakpoints.md)
      padding 15px 0 25px
      gap: 12px
    +above($breakpoints.xxl)
      padding 18px 0 27px
      gap: 15px

  &__card-icon
    width 35px
    height: 35px
    +above($breakpoints.sm)
      width 35px
      height: 35px
    +above($breakpoints.md)
      width 47px
      height: 47px
    +above($breakpoints.xxl)
      width 54px
      height: 54px

  &__card-img
    margin 0 auto
    height: auto
    width 125px
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 160px
    +above($breakpoints.xxl)
      width 191px

  &__card-text
    text-align: center
    padding 10px 0
    +above($breakpoints.sm)
      padding 15px 0
    +above($breakpoints.md)
      padding 20px 0
    +above($breakpoints.xxl)
      padding 21px 0 24px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 7px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 9px
    & > *
      width 260px !important
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 255px !important
      +above($breakpoints.xxl)
        width 310px !important
